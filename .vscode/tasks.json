{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ file",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiler task generated by VSCode."
        },
    ]
}